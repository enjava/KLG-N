<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ddgldetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ddgldetails_bottomBtn"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/fab"
        android:gravity="center"
        android:text="操作"
        android:textColor="@color/colorWhite" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ddgldetails_bottomBtn"
        android:orientation="vertical">

        <com.miyin.klg.view.RedQRTitleBar
            android:id="@+id/ddgldetails_TitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.miyin.klg.view.RedQRTitleBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@color/colorRed"
            android:drawableRight="@drawable/ddgls"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:text="已结算\n\n订单编号 0000000000"
            android:textColor="@color/colorWhite" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">

            <com.miyin.klg.customview.CircleImageview
                android:id="@+id/ddgldetails_Iv"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:layout_margin="20px"
                android:src="@color/colorAccent" />

            <TextView
                android:id="@+id/ddgldetails_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@id/ddgldetails_Iv"
                android:text="测试" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddgldetails_userName"
                android:layout_toRightOf="@id/ddgldetails_Iv"
                android:text="ID 0000000000"
                android:textColor="@color/colorTextGary"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:text="￥0.00" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="手机号码 00000000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="激励模式 25%" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="订单来源 。。" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="营业时间 2016-12-24 10:48:25" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
