<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGary"
    android:orientation="vertical">

    <com.miyin.klg.customview.BlackTitleBar
        android:id="@+id/zz_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.miyin.klg.customview.BlackTitleBar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:text="您可将您的酷币赠给您的好友，或者需要帮助的酷友" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="可转增酷币"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10px"
            android:text="0.00"
            android:textSize="@dimen/text_16sp" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="转赠酷币"
            android:textSize="@dimen/text_16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_margin="10px"
            android:background="@drawable/background_line_bottom"
            android:gravity="start"
            android:hint="G" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="获赠人" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:background="@color/colorWhite"
                android:drawableRight="@drawable/sys_zzz"
                android:hint="请输入或者扫描获赠人ID"
                android:textSize="@dimen/text_14sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="二级密码" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:background="@color/colorWhite"
                android:hint="请输入二级密码"
                android:textSize="@dimen/text_14sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/background_line_bottom">

            <TextView
                android:id="@+id/zz_codeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码" />

            <TextView
                android:id="@+id/zz_getCodeHint"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/colorRed" />

            <View
                android:id="@+id/zz_getCodeLine"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/zz_getCodeHint"
                android:background="@color/colorLineGary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:layout_toLeftOf="@id/zz_getCodeLine"
                android:layout_toRightOf="@id/zz_codeHint"
                android:background="@color/colorWhite"
                android:hint="请输入验证码"
                android:textSize="@dimen/text_14sp" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_margin="20px"
        android:background="@drawable/red_shape"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/colorWhite" />
</com.zhy.autolayout.AutoLinearLayout>
