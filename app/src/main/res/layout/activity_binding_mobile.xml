<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_binding_mobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.miyin.klg.customview.BlackTitleBar
        android:id="@+id/binding_mobile_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.miyin.klg.customview.BlackTitleBar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="为了方便找回密码,请绑定手机" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginLeft="20px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机号码: "
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:text="请输入手机号"
                android:textSize="@dimen/text_16sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginLeft="20px"
            android:background="@drawable/background_line_bottom">

            <TextView
                android:id="@+id/up_codeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="短信验证码:"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/up_codeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="获取验证码"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/up_codeLine"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:layout_toLeftOf="@id/up_codeBtn"
                android:background="@color/colorLineGary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/up_codeLine"
                android:layout_toRightOf="@id/up_codeHint"
                android:background="@color/colorWhite"
                android:hint="请输入验证码"
                android:textSize="@dimen/text_16sp" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_margin="30px"
        android:background="@drawable/red_shape"
        android:gravity="center"
        android:text="确认绑定"
        android:textColor="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:text="说明:手机绑定可直接用于账号登录" />
</com.zhy.autolayout.AutoLinearLayout>
