<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3032"
    android:orientation="vertical">

    <com.miyin.klg.customview.BlackTitleBar
        android:id="@+id/wytj_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.miyin.klg.customview.BlackTitleBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:gravity="center"
        android:text="miyin周酷友专属二维码\n长按保存图片，分享此图赚钱"
        android:textColor="@color/colorWhite" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20px"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/wytj_userLayout"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@color/colorWhite">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160px">

                <ImageView
                    android:id="@+id/wytj_userIcon"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_margin="20px"
                    android:background="@mipmap/ic_launcher" />

                <View
                    android:id="@+id/wytj_userLine"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:layout_toRightOf="@id/wytj_userIcon"
                    android:background="@color/colorLineGary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/wytj_userLine"
                    android:gravity="center_vertical"
                    android:text="我是miyin周\n我为酷么代言"
                    android:textSize="@dimen/text_16sp" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/wytj_userLayout"
            android:background="@color/colorRed">

            <TextView
                android:id="@+id/wytj_userwytj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40px"
                android:drawablePadding="20px"
                android:drawableTop="@drawable/wytjtj"
                android:text="长按图片，识别图中的二维码"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/wytj_userwytj"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20px"
                android:gravity="center"
                android:text="全民化，痕迹化，系统化，持续化\n \n酷么会员系统"
                android:textColor="@color/colorWhite" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200px"
            android:background="@drawable/wytjcode" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
