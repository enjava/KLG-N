<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_product_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.miyin.klg.view.RedQRTitleBar
        android:id="@+id/product_details_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.miyin.klg.view.RedQRTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGary">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:background="@color/colorAccent" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/product_details_shjbhLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20px"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/product_details_shjbh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000000"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_shjbh"
                        android:layout_marginTop="20px"
                        android:text="售货机号"
                        android:textColor="@color/colorTextGary"
                        android:textSize="@dimen/text_12sp" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:id="@+id/product_details_shjbhLine"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="40px"
                    android:layout_toRightOf="@id/product_details_shjbhLayout" />

                <TextView
                    android:id="@+id/product_details_shjbhHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_toRightOf="@id/product_details_shjbhLine"
                    android:text="取货口"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/product_details_shjbhLine1"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="40px"
                    android:layout_toRightOf="@id/product_details_shjbhHint" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/product_details_qumLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="20px"
                    android:layout_toRightOf="@id/product_details_shjbhLine1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/product_details_qhm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000000"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/text_16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_qhm"
                        android:layout_marginTop="20px"
                        android:text="取货码"
                        android:textColor="@color/colorTextGary"
                        android:textSize="@dimen/text_12sp" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20px"
                    android:text="已取货"
                    android:textColor="@color/colorTextGary" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订单编号：0000000000"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="原价：￥0.00"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="优惠：无优惠"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="实付金额：￥0.00"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="下单时间：2016-12-22 15:23:28"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="机器地址：杭州市"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="温馨提示"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:text="请在两小时内取货，两小时后订单会取消并退款"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:background="@color/colorRed"
                android:gravity="center"
                android:text="订单问题反馈"
                android:textColor="@color/colorWhite" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
