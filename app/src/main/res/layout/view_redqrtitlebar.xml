<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTitleRed"
    android:gravity="center_vertical"
  >
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_red_toolbar"
        android:layout_height="24dp"
        android:background="@color/colorTitleRed"/>
    <RelativeLayout
        android:layout_below="@+id/tv_red_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp">

    <LinearLayout
        android:id="@+id/titlebar_while_back"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/white_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/titlebar_while_right"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/head_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>