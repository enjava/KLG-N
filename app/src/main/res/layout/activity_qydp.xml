<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:orientation="vertical"
                                     android:background="@color/colorBackgroundGary"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent">
    <com.miyin.klg.view.RedTitleBar
        android:id="@+id/qrdp_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.miyin.klg.view.RedTitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGary">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:drawableLeft="@drawable/shape_point_red"
                    android:text="基础信息"
                    android:drawablePadding="20px"
                    android:textSize="@dimen/text_14sp" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="店铺名称:"
                    android:textSize="@dimen/text_12sp" />
                <EditText
                    android:id="@+id/gedp_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入店铺名称"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="店铺电话:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/gedp_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入店铺电话号码"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/setting_xxtx"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="区域选择:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:drawableRight="@drawable/goin"
                    android:drawablePadding="10dp"
                    android:text="请选择"
                    android:textSize="@dimen/text_12sp"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="店铺地址:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/gedp_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入详细地址"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="行业类型:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qrdp_hangye"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入行业类型"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="营业时间:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qrdp_yingyeTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入营业时间区间"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="#FFF"
                android:orientation="vertical"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="店铺介绍(500字内):"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qrdp_dpjs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:gravity="start"
                    android:hint="请添加您的店铺及产品介绍信息，请勿填写营业执照经营范围"
                    android:maxLength="500"
                    android:maxLines="5"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:drawableLeft="@drawable/shape_point_red"
                    android:text="图片信息"
                    android:drawablePadding="20px"
                    android:textSize="@dimen/text_14sp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="@drawable/background_line_bottom"
                android:orientation="vertical">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_14sp"
                        android:text="门店图"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="#FF7F00"
                        android:text="查看示例"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <Button
                    android:layout_width="300px"
                    android:layout_height="200px"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="点击上传图片"
                    />
            </com.zhy.autolayout.AutoLinearLayout >
            <Button
                android:id="@+id/qydp_btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/me_ok_selector"
                android:gravity="center"
                android:onClick="nextBtn"
                android:text="下一步"
                android:textColor="@color/txt_btn_selector" />
        </com.zhy.autolayout.AutoLinearLayout >
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
