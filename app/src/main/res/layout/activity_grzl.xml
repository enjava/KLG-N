<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_grzl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.miyin.klg.view.RedQRTitleBar
        android:id="@+id/grzl_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.miyin.klg.view.RedQRTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/grzl_userIconIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                         />

                    <com.miyin.klg.customview.CircleImageview
                        android:layout_width="96px"
                        android:layout_height="96px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/grzl_userIconIv"
                        android:src="@mipmap/headimg" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="我的ID"
                        android:textColor="@color/colorTextGary" />

                    <TextView
                        android:id="@+id/grzl_userID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:text="000000"
                        android:textColor="@color/colorTextGary" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/grzl_userNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用户名"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/grzl_userNameIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@drawable/goin" />

                    <TextView
                        android:id="@+id/grzl_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/grzl_userNameIv"
                        android:text="00000"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/grzl_tureNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="真实姓名"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/grzl_trueNameIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@drawable/goin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/grzl_trueNameIv"
                        android:text="00000"
                        android:id="@+id/grzl_zsxm"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/grzl_IDcardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="身份证号"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/imageView_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@drawable/goin" />

                    <TextView
                        android:id="@+id/grzl_IDcardIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/imageView_id"
                        android:text="00000000000000000000000"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/grzl_addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所在地"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/grzl_addressIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@drawable/goin" />

                    <TextView
                        android:id="@+id/grzl_szd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/grzl_addressIv"
                        android:text="浙江省 杭州市"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/grzl_areaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="详细地址"
                        android:textColor="@color/colorTextGary" />

                    <ImageView
                        android:id="@+id/grzl_userNeIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:background="@drawable/goin" />

                    <TextView
                        android:id="@+id/grzl_addressxx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@id/grzl_userNeIv"
                        android:text="00000"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/background_line_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="推荐人姓名"
                        android:textColor="@color/colorTextGary" />


                    <TextView
                        android:id="@+id/grzl_tjrName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:text="0000"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginLeft="40px"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="推荐人ID"
                        android:textColor="@color/colorTextGary" />


                    <TextView
                        android:id="@+id/grzl_tjrID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:text="0000"
                        android:textColor="@color/colorTextGary" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/grzl_gotoSetting"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="设置" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
