<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/kmkj_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:text="版权@酷么科技"
        android:textColor="@color/colorTextGary" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/kmkj_logo"
        android:orientation="vertical">

        <com.miyin.klg.customview.BlackTitleBar
            android:id="@+id/login_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.miyin.klg.customview.BlackTitleBar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLineGary" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginLeft="30px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/login_username"
                android:drawablePadding="20px"
                android:text="账户类型"
                android:gravity="center"
                android:textColor="@color/colorTextGary"
                android:textSize="@dimen/text_16sp"
                />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginLeft="30px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/login_phone"
                android:drawablePadding="20px"
                android:hint="请输入账号"
                android:textColor="@color/colorTextGary"
                android:textColorHint="@color/colorTextGary"
                android:textSize="@dimen/text_16sp"
                android:id="@+id/editText" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/login_password"
                android:drawablePadding="20px"
                android:hint="请输入密码"
                android:textColor="@color/colorTextGary"
                android:textColorHint="@color/colorTextGary"
                android:textSize="@dimen/text_16sp" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_forgetPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:text="忘记密码?"
                android:textColor="@color/txt_register_selector"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/login_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="注册"
                android:textColor="@color/txt_register_selector"
                android:textSize="@dimen/text_14sp" />
        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/login_ok"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_margin="40px"
            android:background="@drawable/me_ok_selector"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/txt_btn_selector"
            android:textSize="@dimen/text_16sp" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
