<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:orientation="vertical"
                                     android:background="@color/colorBackgroundGary"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent">
    <com.miyin.klg.view.RedQRTitleBar
        android:id="@+id/qyzz_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.miyin.klg.view.RedQRTitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGary">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:drawableLeft="@drawable/shape_point_red"
                    android:text="负责人身份信息"
                    android:drawablePadding="20px"
                    android:textSize="@dimen/text_14sp" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="法人"

                    android:drawablePadding="20px"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/shape_yuan_green"
                    android:textColor="@color/colorGreen"
                    android:textSize="10dp"
                    android:text="√"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="@drawable/background_line_bottom"
                android:orientation="vertical">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:text="手持身份证照"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="12dp"
                        android:textColor="#FF7F00"
                        android:text="查看示例"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <Button
                    android:id="@+id/qyzz_handIDCard"
                    android:layout_width="300px"
                    android:layout_height="200px"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="点击上传图片"
                    />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="姓      名:"
                    android:textSize="@dimen/text_12sp" />
                <EditText
                    android:id="@+id/qyzz_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入姓名"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="身份证号:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qyzz_et_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入身份证号"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="联系电话:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qyzz_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入联系电话"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >

            <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:drawableLeft="@drawable/shape_point_red"
                android:text="执照信息"
                android:drawablePadding="20px"
                android:textSize="@dimen/text_14sp" />
        </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="@drawable/background_line_bottom"
                android:orientation="vertical">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:text="营业执照"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="#FF7F00"
                        android:text=""/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <Button
                    android:id="@+id/qyzz_yingyezhizhao"
                    android:layout_width="300px"
                    android:layout_height="200px"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="点击上传图片"
                    />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="执照名称:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qyzz_zzName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入执照名称"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal"     >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="注  册  号:"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/qyzz_zcid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical|left"
                    android:hint="请输入注册号"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColorHint="@color/colorTextGary"
                    android:textSize="12dp" />
            </com.zhy.autolayout.AutoLinearLayout >

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_line_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:drawableLeft="@drawable/shape_point_red"
                    android:text="商家承诺书"
                    android:drawablePadding="20px"
                    android:textSize="@dimen/text_14sp" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:background="@drawable/background_line_bottom"
                android:orientation="vertical">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:text="商家承诺书"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="#FF7F00"
                        android:text=""/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <Button
                    android:id="@+id/qyzz_chengnuo"
                    android:layout_width="300px"
                    android:layout_height="200px"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="点击上传图片"
                    />
            </com.zhy.autolayout.AutoLinearLayout >

            <Button
                android:id="@+id/qyzz_btn_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:onClick="finishBtn"
                android:background="@drawable/me_ok_selector"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/txt_btn_selector" />
        </com.zhy.autolayout.AutoLinearLayout >
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
